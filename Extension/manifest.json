{
	"name": "Geheim",
	"version": "2.0.0",
	"description": "Applies encryption on all text you enter on any website in order to make it only accessible by yourself.",
	"icons":
	{
		"128": "icon.png"
	},
	"background":
	{
		"scripts":
		[
			"background.js"
		]
	},
	"content_scripts": 
	[
		{
			"run_at": "document_start",
			"matches": ["http://*/*", "https://*/*", "file://*/*"],
			"js": ["geheim_content_script.js"],
			"css": ["geheim_content_script_inject.css"]
		}
	],
	"web_accessible_resources":
	[
		"images/safe.png",
		"images/unsafe.png",
		"images/hover.png",
		"geheim_content_script_inject.js"
	],
	"permissions":
	[
		"tabs",
		"storage"
	],
	"browser_action":
	{
		"default_name": "Geheim",
		"default_icon": "geheim.png",
		"default_popup": "popup.html"
	},
	"manifest_version": 2,
	"content_security_policy": "default-src 'none'; style-src 'self'; script-src 'self';"
}